{
  "number": 101,
  "name": "سُورَةُ القَارِعَةِ",
  "englishName": "Al-Qaari'a",
  "englishNameTranslation": "The Calamity",
  "revelationType": "Meccan",
  "ayahs": [
    {
      "number": 6158,
      "text": "بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ ٱلْقَارِعَةُ",
      "translation": "The Striking Calamity -",
      "numberInSurah": 1,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6159,
      "text": "مَا ٱلْقَارِعَةُ",
      "translation": "What is the Striking Calamity?",
      "numberInSurah": 2,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6160,
      "text": "وَمَآ أَدْرَىٰكَ مَا ٱلْقَارِعَةُ",
      "translation": "And what can make you know what is the Striking Calamity?",
      "numberInSurah": 3,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6161,
      "text": "يَوْمَ يَكُونُ ٱلنَّاسُ كَٱلْفَرَاشِ ٱلْمَبْثُوثِ",
      "translation": "It is the Day when people will be like moths, dispersed,",
      "numberInSurah": 4,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6162,
      "text": "وَتَكُونُ ٱلْجِبَالُ كَٱلْعِهْنِ ٱلْمَنفُوشِ",
      "translation": "And the mountains will be like wool, fluffed up.",
      "numberInSurah": 5,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6163,
      "text": "فَأَمَّا مَن ثَقُلَتْ مَوَٰزِينُهُۥ",
      "translation": "Then as for one whose scales are heavy [with good deeds],",
      "numberInSurah": 6,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6164,
      "text": "فَهُوَ فِى عِيشَةٍۢ رَّاضِيَةٍۢ",
      "translation": "He will be in a pleasant life.",
      "numberInSurah": 7,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6165,
      "text": "وَأَمَّا مَنْ خَفَّتْ مَوَٰزِينُهُۥ",
      "translation": "But as for one whose scales are light,",
      "numberInSurah": 8,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6166,
      "text": "فَأُمُّهُۥ هَاوِيَةٌۭ",
      "translation": "His refuge will be an abyss.",
      "numberInSurah": 9,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6167,
      "text": "وَمَآ أَدْرَىٰكَ مَا هِيَهْ",
      "translation": "And what can make you know what that is?",
      "numberInSurah": 10,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6168,
      "text": "نَارٌ حَامِيَةٌۢ",
      "translation": "It is a Fire, intensely hot.",
      "numberInSurah": 11,
      "juz": 30,
      "page": 600
    }
  ]
}