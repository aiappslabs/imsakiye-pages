{
  "number": 100,
  "name": "سُورَةُ العَادِيَاتِ",
  "englishName": "Al-Aadiyaat",
  "englishNameTranslation": "The Chargers",
  "revelationType": "Meccan",
  "ayahs": [
    {
      "number": 6147,
      "text": "بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ وَٱلْعَٰدِيَٰتِ ضَبْحًۭا",
      "translation": "And olsun Allah yolunda koştukça koşanlara;",
      "numberInSurah": 1,
      "juz": 30,
      "page": 599
    },
    {
      "number": 6148,
      "text": "فَٱلْمُورِيَٰتِ قَدْحًۭا",
      "translation": "And olsun kıvılcımlar saçanlara;",
      "numberInSurah": 2,
      "juz": 30,
      "page": 599
    },
    {
      "number": 6149,
      "text": "فَٱلْمُغِيرَٰتِ صُبْحًۭا",
      "translation": "Sabah sabah akına çıkanlara;",
      "numberInSurah": 3,
      "juz": 30,
      "page": 599
    },
    {
      "number": 6150,
      "text": "فَأَثَرْنَ بِهِۦ نَقْعًۭا",
      "translation": "Ve tozu dumana katanlara;",
      "numberInSurah": 4,
      "juz": 30,
      "page": 599
    },
    {
      "number": 6151,
      "text": "فَوَسَطْنَ بِهِۦ جَمْعًا",
      "translation": "Düşman topluluğunun içine dalanlara ki:",
      "numberInSurah": 5,
      "juz": 30,
      "page": 599
    },
    {
      "number": 6152,
      "text": "إِنَّ ٱلْإِنسَٰنَ لِرَبِّهِۦ لَكَنُودٌۭ",
      "translation": "İnsan gerçekten Rabbine karşı pek nankördür.",
      "numberInSurah": 6,
      "juz": 30,
      "page": 599
    },
    {
      "number": 6153,
      "text": "وَإِنَّهُۥ عَلَىٰ ذَٰلِكَ لَشَهِيدٌۭ",
      "translation": "Doğrusu kendisi de bunların hepsine şahittir.",
      "numberInSurah": 7,
      "juz": 30,
      "page": 599
    },
    {
      "number": 6154,
      "text": "وَإِنَّهُۥ لِحُبِّ ٱلْخَيْرِ لَشَدِيدٌ",
      "translation": "Gerçekten mala da pek düşkündür.",
      "numberInSurah": 8,
      "juz": 30,
      "page": 599
    },
    {
      "number": 6155,
      "text": "۞ أَفَلَا يَعْلَمُ إِذَا بُعْثِرَ مَا فِى ٱلْقُبُورِ",
      "translation": "İnsan, kabirlerde bulunanların çıkarılacağı ve kalblerde olanların ortaya konulacağı bir zamanın geleceğini bilmez mi?",
      "numberInSurah": 9,
      "juz": 30,
      "page": 599
    },
    {
      "number": 6156,
      "text": "وَحُصِّلَ مَا فِى ٱلصُّدُورِ",
      "translation": "İnsan, kabirlerde bulunanların çıkarılacağı ve kalblerde olanların ortaya konulacağı bir zamanın geleceğini bilmez mi?",
      "numberInSurah": 10,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6157,
      "text": "إِنَّ رَبَّهُم بِهِمْ يَوْمَئِذٍۢ لَّخَبِيرٌۢ",
      "translation": "Doğrusu Rableri o gün onların her şeyinden haberdardır.",
      "numberInSurah": 11,
      "juz": 30,
      "page": 600
    }
  ]
}