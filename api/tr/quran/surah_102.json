{
  "number": 102,
  "name": "سُورَةُ التَّكَاثُرِ",
  "englishName": "Tekâsür",
  "englishNameTranslation": "Çoğaltma Yarışı",
  "revelationType": "Mekki",
  "ayahs": [
    {
      "number": 6169,
      "text": "بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ أَلْهَىٰكُمُ ٱلتَّكَاثُرُ",
      "translation": "Çoğunluk olmak iddianız sizi o kadar meşgul etti ki, mezarları ziyaretle oradakileri de sayacak kadar oldunuz.",
      "numberInSurah": 1,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6170,
      "text": "حَتَّىٰ زُرْتُمُ ٱلْمَقَابِرَ",
      "translation": "Çoğunluk olmak iddianız sizi o kadar meşgul etti ki, mezarları ziyaretle oradakileri de sayacak kadar oldunuz.",
      "numberInSurah": 2,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6171,
      "text": "كَلَّا سَوْفَ تَعْلَمُونَ",
      "translation": "Hayır; öyle olmayın; yakında bileceksiniz.",
      "numberInSurah": 3,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6172,
      "text": "ثُمَّ كَلَّا سَوْفَ تَعْلَمُونَ",
      "translation": "Hayır; gözünüzü açın; yakında bileceksiniz.",
      "numberInSurah": 4,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6173,
      "text": "كَلَّا لَوْ تَعْلَمُونَ عِلْمَ ٱلْيَقِينِ",
      "translation": "Dikkat edin, şayet yaptığınızın sonucunu kesin olarak bir bilseniz!",
      "numberInSurah": 5,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6174,
      "text": "لَتَرَوُنَّ ٱلْجَحِيمَ",
      "translation": "And olsun ki, cehennemi göreceksiniz.",
      "numberInSurah": 6,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6175,
      "text": "ثُمَّ لَتَرَوُنَّهَا عَيْنَ ٱلْيَقِينِ",
      "translation": "And olsun ki, onu gözünüzle kesin olarak göreceksiniz.",
      "numberInSurah": 7,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6176,
      "text": "ثُمَّ لَتُسْـَٔلُنَّ يَوْمَئِذٍ عَنِ ٱلنَّعِيمِ",
      "translation": "Sonra o gün, size verilmiş olan her nimetten sorguya çekileceksiniz.",
      "numberInSurah": 8,
      "juz": 30,
      "page": 600
    }
  ]
