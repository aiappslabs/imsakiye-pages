{
  "number": 82,
  "name": "سُورَةُ الانفِطَارِ",
  "englishName": "İnfitâr",
  "englishNameTranslation": "Gök Yarıldığı Zaman",
  "revelationType": "Mekki",
  "ayahs": [
    {
      "number": 5830,
      "text": "بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ إِذَا ٱلسَّمَآءُ ٱنفَطَرَتْ",
      "translation": "Gök yarıldığı zaman,",
      "numberInSurah": 1,
      "juz": 30,
      "page": 587
    },
    {
      "number": 5831,
      "text": "وَإِذَا ٱلْكَوَاكِبُ ٱنتَثَرَتْ",
      "translation": "Yıldızlar dağılıp döküldüğü zaman,",
      "numberInSurah": 2,
      "juz": 30,
      "page": 587
    },
    {
      "number": 5832,
      "text": "وَإِذَا ٱلْبِحَارُ فُجِّرَتْ",
      "translation": "Denizler kaynaştığı zaman,",
      "numberInSurah": 3,
      "juz": 30,
      "page": 587
    },
    {
      "number": 5833,
      "text": "وَإِذَا ٱلْقُبُورُ بُعْثِرَتْ",
      "translation": "Kabirlerin içi dışa çıktığı zaman,",
      "numberInSurah": 4,
      "juz": 30,
      "page": 587
    },
    {
      "number": 5834,
      "text": "عَلِمَتْ نَفْسٌۭ مَّا قَدَّمَتْ وَأَخَّرَتْ",
      "translation": "İnsanoğlu, ne yaptığını ve ne yapmadığını görür.",
      "numberInSurah": 5,
      "juz": 30,
      "page": 587
    },
    {
      "number": 5835,
      "text": "يَٰٓأَيُّهَا ٱلْإِنسَٰنُ مَا غَرَّكَ بِرَبِّكَ ٱلْكَرِيمِ",
      "translation": "Ey insanoğlu! Seni yaratıp sonra şekil veren, düzenleyen, mütenasip kılan, istediği şekilde seni terkip eden, çok cömert olan Rabbine karşı seni aldatan nedir?",
      "numberInSurah": 6,
      "juz": 30,
      "page": 587
    },
    {
      "number": 5836,
      "text": "ٱلَّذِى خَلَقَكَ فَسَوَّىٰكَ فَعَدَلَكَ",
      "translation": "Ey insanoğlu! Seni yaratıp sonra şekil veren, düzenleyen, mütenasip kılan, istediği şekilde seni terkip eden, çok cömert olan Rabbine karşı seni aldatan nedir?",
      "numberInSurah": 7,
      "juz": 30,
      "page": 587
    },
    {
      "number": 5837,
      "text": "فِىٓ أَىِّ صُورَةٍۢ مَّا شَآءَ رَكَّبَكَ",
      "translation": "Ey insanoğlu! Seni yaratıp sonra şekil veren, düzenleyen, mütenasip kılan, istediği şekilde seni terkip eden, çok cömert olan Rabbine karşı seni aldatan nedir?",
      "numberInSurah": 8,
      "juz": 30,
      "page": 587
    },
    {
      "number": 5838,
      "text": "كَلَّا بَلْ تُكَذِّبُونَ بِٱلدِّينِ",
      "translation": "Hayır, hayır; doğrusu siz dini yalanlıyorsunuz.",
      "numberInSurah": 9,
      "juz": 30,
      "page": 587
    },
    {
      "number": 5839,
      "text": "وَإِنَّ عَلَيْكُمْ لَحَٰفِظِينَ",
      "translation": "Oysa, yaptıklarınızı bilen değerli yazıcılar sizi gözetlemektedirler.",
      "numberInSurah": 10,
      "juz": 30,
      "page": 587
    },
    {
      "number": 5840,
      "text": "كِرَامًۭا كَٰتِبِينَ",
      "translation": "Oysa, yaptıklarınızı bilen değerli yazıcılar sizi gözetlemektedirler.",
      "numberInSurah": 11,
      "juz": 30,
      "page": 587
    },
    {
      "number": 5841,
      "text": "يَعْلَمُونَ مَا تَفْعَلُونَ",
      "translation": "Oysa, yaptıklarınızı bilen değerli yazıcılar sizi gözetlemektedirler.",
      "numberInSurah": 12,
      "juz": 30,
      "page": 587
    },
    {
      "number": 5842,
      "text": "إِنَّ ٱلْأَبْرَارَ لَفِى نَعِيمٍۢ",
      "translation": "İyiler şüphesiz nimet içindedirler.",
      "numberInSurah": 13,
      "juz": 30,
      "page": 587
    },
    {
      "number": 5843,
      "text": "وَإِنَّ ٱلْفُجَّارَ لَفِى جَحِيمٍۢ",
      "translation": "Allah'ın buyruğundan çıkanlar cehennemdedirler.",
      "numberInSurah": 14,
      "juz": 30,
      "page": 587
    },
    {
      "number": 5844,
      "text": "يَصْلَوْنَهَا يَوْمَ ٱلدِّينِ",
      "translation": "Din Günü oraya girerler.",
      "numberInSurah": 15,
      "juz": 30,
      "page": 587
    },
    {
      "number": 5845,
      "text": "وَمَا هُمْ عَنْهَا بِغَآئِبِينَ",
      "translation": "Oradan bir daha ayrılamazlar.",
      "numberInSurah": 16,
      "juz": 30,
      "page": 587
    },
    {
      "number": 5846,
      "text": "وَمَآ أَدْرَىٰكَ مَا يَوْمُ ٱلدِّينِ",
      "translation": "Din gününün ne olduğunu sen nereden bilirsin?",
      "numberInSurah": 17,
      "juz": 30,
      "page": 587
    },
    {
      "number": 5847,
      "text": "ثُمَّ مَآ أَدْرَىٰكَ مَا يَوْمُ ٱلدِّينِ",
      "translation": "Evet, din gününün ne olduğunu nereden bileceksin?",
      "numberInSurah": 18,
      "juz": 30,
      "page": 587
    },
    {
      "number": 5848,
      "text": "يَوْمَ لَا تَمْلِكُ نَفْسٌۭ لِّنَفْسٍۢ شَيْـًۭٔا ۖ وَٱلْأَمْرُ يَوْمَئِذٍۢ لِّلَّهِ",
      "translation": "O gün, kimsenin kimseye hiçbir fayda sağlamayacağı bir gündür. O gün buyruk, yalnız Allah'ındır.",
      "numberInSurah": 19,
      "juz": 30,
      "page": 587
    }
  ]
}