{
  "number": 79,
  "name": "سُورَةُ النَّازِعَاتِ",
  "englishName": "Nâziât",
  "englishNameTranslation": "Çekip Çıkaranlar",
  "revelationType": "Mekki",
  "ayahs": [
    {
      "number": 5713,
      "text": "بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ وَٱلنَّٰزِعَٰتِ غَرْقًۭا",
      "translation": "Canları boğarcasına şiddetle çekip alanlara and olsun,",
      "numberInSurah": 1,
      "juz": 30,
      "page": 583
    },
    {
      "number": 5714,
      "text": "وَٱلنَّٰشِطَٰتِ نَشْطًۭا",
      "translation": "Canları kolaylıkla alanlara and olsun,",
      "numberInSurah": 2,
      "juz": 30,
      "page": 583
    },
    {
      "number": 5715,
      "text": "وَٱلسَّٰبِحَٰتِ سَبْحًۭا",
      "translation": "Yüzüp yüzüp gidenlere and olsun,",
      "numberInSurah": 3,
      "juz": 30,
      "page": 583
    },
    {
      "number": 5716,
      "text": "فَٱلسَّٰبِقَٰتِ سَبْقًۭا",
      "translation": "Yarıştıkça yarışan ve işleri yöneten meleklere and olsun",
      "numberInSurah": 4,
      "juz": 30,
      "page": 583
    },
    {
      "number": 5717,
      "text": "فَٱلْمُدَبِّرَٰتِ أَمْرًۭا",
      "translation": "Yarıştıkça yarışan ve işleri yöneten meleklere and olsun",
      "numberInSurah": 5,
      "juz": 30,
      "page": 583
    },
    {
      "number": 5718,
      "text": "يَوْمَ تَرْجُفُ ٱلرَّاجِفَةُ",
      "translation": "O gün bir sarsıntı sarsar.",
      "numberInSurah": 6,
      "juz": 30,
      "page": 583
    },
    {
      "number": 5719,
      "text": "تَتْبَعُهَا ٱلرَّادِفَةُ",
      "translation": "Peşinden bir diğeri gelir.",
      "numberInSurah": 7,
      "juz": 30,
      "page": 583
    },
    {
      "number": 5720,
      "text": "قُلُوبٌۭ يَوْمَئِذٍۢ وَاجِفَةٌ",
      "translation": "O gün kalbler titrer.",
      "numberInSurah": 8,
      "juz": 30,
      "page": 583
    },
    {
      "number": 5721,
      "text": "أَبْصَٰرُهَا خَٰشِعَةٌۭ",
      "translation": "İnsanların gözleri yere döner.",
      "numberInSurah": 9,
      "juz": 30,
      "page": 583
    },
    {
      "number": 5722,
      "text": "يَقُولُونَ أَءِنَّا لَمَرْدُودُونَ فِى ٱلْحَافِرَةِ",
      "translation": "Derler ki: \"Biz eski halimize mi döndürüleceğiz?\"",
      "numberInSurah": 10,
      "juz": 30,
      "page": 583
    },
    {
      "number": 5723,
      "text": "أَءِذَا كُنَّا عِظَٰمًۭا نَّخِرَةًۭ",
      "translation": "\"Ufalanmış kemik olduğumuz zaman mı?\"",
      "numberInSurah": 11,
      "juz": 30,
      "page": 583
    },
    {
      "number": 5724,
      "text": "قَالُوا۟ تِلْكَ إِذًۭا كَرَّةٌ خَاسِرَةٌۭ",
      "translation": "Derler ki: \"O takdirde bu zararına bir dönüştür.\"",
      "numberInSurah": 12,
      "juz": 30,
      "page": 583
    },
    {
      "number": 5725,
      "text": "فَإِنَّمَا هِىَ زَجْرَةٌۭ وَٰحِدَةٌۭ",
      "translation": "Doğrusu bir tek çığlık yetecektir.",
      "numberInSurah": 13,
      "juz": 30,
      "page": 583
    },
    {
      "number": 5726,
      "text": "فَإِذَا هُم بِٱلسَّاهِرَةِ",
      "translation": "Hepsi hemen bir düzlüğe dökülecektir.",
      "numberInSurah": 14,
      "juz": 30,
      "page": 583
    },
    {
      "number": 5727,
      "text": "هَلْ أَتَىٰكَ حَدِيثُ مُوسَىٰٓ",
      "translation": "Musa'nın başından geçen olay sana geldi mi?",
      "numberInSurah": 15,
      "juz": 30,
      "page": 583
    },
    {
      "number": 5728,
      "text": "إِذْ نَادَىٰهُ رَبُّهُۥ بِٱلْوَادِ ٱلْمُقَدَّسِ طُوًى",
      "translation": "Tuva'da, kutsal bir vadide, Rabbi ona şöyle hitap etmişti:",
      "numberInSurah": 16,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5729,
      "text": "ٱذْهَبْ إِلَىٰ فِرْعَوْنَ إِنَّهُۥ طَغَىٰ",
      "translation": "\"Firavun'a git; doğrusu o azmıştır.\"",
      "numberInSurah": 17,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5730,
      "text": "فَقُلْ هَل لَّكَ إِلَىٰٓ أَن تَزَكَّىٰ",
      "translation": "\"Ona de ki: Arınmağa niyetin var mı?\"",
      "numberInSurah": 18,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5731,
      "text": "وَأَهْدِيَكَ إِلَىٰ رَبِّكَ فَتَخْشَىٰ",
      "translation": "\"Rabbine giden yolu göstereyim ki O'na saygı duyup korkasın.\"",
      "numberInSurah": 19,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5732,
      "text": "فَأَرَىٰهُ ٱلْءَايَةَ ٱلْكُبْرَىٰ",
      "translation": "Bunun üzerine ona en büyük mucizeyi gösterdi.",
      "numberInSurah": 20,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5733,
      "text": "فَكَذَّبَ وَعَصَىٰ",
      "translation": "Ama Firavun yalanladı ve baş kaldırdı.",
      "numberInSurah": 21,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5734,
      "text": "ثُمَّ أَدْبَرَ يَسْعَىٰ",
      "translation": "Geri dönüp yürüdü.",
      "numberInSurah": 22,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5735,
      "text": "فَحَشَرَ فَنَادَىٰ",
      "translation": "Adamlarını toplayıp seslendi:",
      "numberInSurah": 23,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5736,
      "text": "فَقَالَ أَنَا۠ رَبُّكُمُ ٱلْأَعْلَىٰ",
      "translation": "\"Sizin en yüce rabbiniz benim\" dedi.",
      "numberInSurah": 24,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5737,
      "text": "فَأَخَذَهُ ٱللَّهُ نَكَالَ ٱلْءَاخِرَةِ وَٱلْأُولَىٰٓ",
      "translation": "Allah bunun üzerine onu dünya ve ahiret azabına uğrattı.",
      "numberInSurah": 25,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5738,
      "text": "إِنَّ فِى ذَٰلِكَ لَعِبْرَةًۭ لِّمَن يَخْشَىٰٓ",
      "translation": "Doğrusu bunda Allah'tan korkan kimseye ders vardır.",
      "numberInSurah": 26,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5739,
      "text": "ءَأَنتُمْ أَشَدُّ خَلْقًا أَمِ ٱلسَّمَآءُ ۚ بَنَىٰهَا",
      "translation": "Sizi yaratmak mı daha zordur, yoksa göğü yaratmak mı? Ki onu Allah bina edip yükseltmiş ve ona şekil vermiştir.",
      "numberInSurah": 27,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5740,
      "text": "رَفَعَ سَمْكَهَا فَسَوَّىٰهَا",
      "translation": "Sizi yaratmak mı daha zordur, yoksa göğü yaratmak mı? Ki onu Allah bina edip yükseltmiş ve ona şekil vermiştir.",
      "numberInSurah": 28,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5741,
      "text": "وَأَغْطَشَ لَيْلَهَا وَأَخْرَجَ ضُحَىٰهَا",
      "translation": "Gecesini karanlık yapmış, gündüzünü aydınlatmıştır.",
      "numberInSurah": 29,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5742,
      "text": "وَٱلْأَرْضَ بَعْدَ ذَٰلِكَ دَحَىٰهَآ",
      "translation": "Ardından yeri düzenlemiştir.",
      "numberInSurah": 30,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5743,
      "text": "أَخْرَجَ مِنْهَا مَآءَهَا وَمَرْعَىٰهَا",
      "translation": "Suyunu ondan çıkarmış ve otlak yer meydana getirmiştir.",
      "numberInSurah": 31,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5744,
      "text": "وَٱلْجِبَالَ أَرْسَىٰهَا",
      "translation": "Dağları yerleştirmiştir.",
      "numberInSurah": 32,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5745,
      "text": "مَتَٰعًۭا لَّكُمْ وَلِأَنْعَٰمِكُمْ",
      "translation": "Bunları sizin ve hayvanlarınızın geçinmesi için yapmıştır.",
      "numberInSurah": 33,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5746,
      "text": "فَإِذَا جَآءَتِ ٱلطَّآمَّةُ ٱلْكُبْرَىٰ",
      "translation": "Güç yetirilemeyen en büyük baskın geldiği zaman, o gün, insan ne uğurda çalıştığını anlar.",
      "numberInSurah": 34,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5747,
      "text": "يَوْمَ يَتَذَكَّرُ ٱلْإِنسَٰنُ مَا سَعَىٰ",
      "translation": "Güç yetirilemeyen en büyük baskın geldiği zaman, o gün, insan ne uğurda çalıştığını anlar.",
      "numberInSurah": 35,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5748,
      "text": "وَبُرِّزَتِ ٱلْجَحِيمُ لِمَن يَرَىٰ",
      "translation": "Cehennem her bakanın göreceği şekilde gösterilir.",
      "numberInSurah": 36,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5749,
      "text": "فَأَمَّا مَن طَغَىٰ",
      "translation": "İşte, azıp da dünya hayatını tercih edenin varacağı yer şüphesiz cehennemdir.",
      "numberInSurah": 37,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5750,
      "text": "وَءَاثَرَ ٱلْحَيَوٰةَ ٱلدُّنْيَا",
      "translation": "İşte, azıp da dünya hayatını tercih edenin varacağı yer şüphesiz cehennemdir.",
      "numberInSurah": 38,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5751,
      "text": "فَإِنَّ ٱلْجَحِيمَ هِىَ ٱلْمَأْوَىٰ",
      "translation": "İşte, azıp da dünya hayatını tercih edenin varacağı yer şüphesiz cehennemdir.",
      "numberInSurah": 39,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5752,
      "text": "وَأَمَّا مَنْ خَافَ مَقَامَ رَبِّهِۦ وَنَهَى ٱلنَّفْسَ عَنِ ٱلْهَوَىٰ",
      "translation": "Ama kim Rabbinin azametinden korkup da kendini kötülükten alıkoymuşsa, varacağı yer şüphesiz cennettir.",
      "numberInSurah": 40,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5753,
      "text": "فَإِنَّ ٱلْجَنَّةَ هِىَ ٱلْمَأْوَىٰ",
      "translation": "Ama kim Rabbinin azametinden korkup da kendini kötülükten alıkoymuşsa, varacağı yer şüphesiz cennettir.",
      "numberInSurah": 41,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5754,
      "text": "يَسْـَٔلُونَكَ عَنِ ٱلسَّاعَةِ أَيَّانَ مُرْسَىٰهَا",
      "translation": "Senden kıyametin ne zaman gelip çatacağını sorarlar.",
      "numberInSurah": 42,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5755,
      "text": "فِيمَ أَنتَ مِن ذِكْرَىٰهَآ",
      "translation": "Nerde senden onu anlatması?",
      "numberInSurah": 43,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5756,
      "text": "إِلَىٰ رَبِّكَ مُنتَهَىٰهَآ",
      "translation": "Onun bilgisi Rabbine aittir.",
      "numberInSurah": 44,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5757,
      "text": "إِنَّمَآ أَنتَ مُنذِرُ مَن يَخْشَىٰهَا",
      "translation": "Sen sadece kıyametten korkanı uyaransın.",
      "numberInSurah": 45,
      "juz": 30,
      "page": 584
    },
    {
      "number": 5758,
      "text": "كَأَنَّهُمْ يَوْمَ يَرَوْنَهَا لَمْ يَلْبَثُوٓا۟ إِلَّا عَشِيَّةً أَوْ ضُحَىٰهَا",
      "translation": "Kıyameti gördükleri gün dünyada ancak bir akşam yahut bir kuşluk vakti kadar kalmış olduklarını sanırlar.",
      "numberInSurah": 46,
      "juz": 30,
      "page": 584
    }
  ]
}