{
  "number": 101,
  "name": "سُورَةُ القَارِعَةِ",
  "englishName": "Kāria",
  "englishNameTranslation": "Kāria",
  "revelationType": "Mekki",
  "ayahs": [
    {
      "number": 6158,
      "text": "بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ ٱلْقَارِعَةُ",
      "translation": "Gürültü koparacak olan",
      "numberInSurah": 1,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6159,
      "text": "مَا ٱلْقَارِعَةُ",
      "translation": "Nedir o gürültü koparacak olan?",
      "numberInSurah": 2,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6160,
      "text": "وَمَآ أَدْرَىٰكَ مَا ٱلْقَارِعَةُ",
      "translation": "O gürültü koparacak olanın ne olduğunu sen bilir misin?",
      "numberInSurah": 3,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6161,
      "text": "يَوْمَ يَكُونُ ٱلنَّاسُ كَٱلْفَرَاشِ ٱلْمَبْثُوثِ",
      "translation": "O gün insanlar, ateş etrafında çırpınıp dökülen pervaneye dönecekler.",
      "numberInSurah": 4,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6162,
      "text": "وَتَكُونُ ٱلْجِبَالُ كَٱلْعِهْنِ ٱلْمَنفُوشِ",
      "translation": "Dağlar, atılmış renkli yüne benzeyecekler.",
      "numberInSurah": 5,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6163,
      "text": "فَأَمَّا مَن ثَقُلَتْ مَوَٰزِينُهُۥ",
      "translation": "Ama tartıları ağır gelen kimse hoş bir hayat içinde olacaktır.",
      "numberInSurah": 6,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6164,
      "text": "فَهُوَ فِى عِيشَةٍۢ رَّاضِيَةٍۢ",
      "translation": "Ama tartıları ağır gelen kimse hoş bir hayat içinde olacaktır.",
      "numberInSurah": 7,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6165,
      "text": "وَأَمَّا مَنْ خَفَّتْ مَوَٰزِينُهُۥ",
      "translation": "Tartıları hafif gelenler ise,",
      "numberInSurah": 8,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6166,
      "text": "فَأُمُّهُۥ هَاوِيَةٌۭ",
      "translation": "Onların yeri bir çukurdur.",
      "numberInSurah": 9,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6167,
      "text": "وَمَآ أَدْرَىٰكَ مَا هِيَهْ",
      "translation": "O çukurun ne olduğunu sen bilir misin?",
      "numberInSurah": 10,
      "juz": 30,
      "page": 600
    },
    {
      "number": 6168,
      "text": "نَارٌ حَامِيَةٌۢ",
      "translation": "O, kızgın bir ateştir.",
      "numberInSurah": 11,
      "juz": 30,
      "page": 600
    }
  ]
}